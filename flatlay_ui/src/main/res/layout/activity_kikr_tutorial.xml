<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView

        android:layout_width="match_parent"
        android:background="@drawable/bg_btn_landing"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/kikrRewordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_xxlarge"
                android:gravity="center"
                android:text="@string/tutorial_kikr_reward"
                android:textSize="@dimen/x_large_text_size" />

            <ImageView
                android:id="@+id/kikrCardImageView"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/kikrRewordTextView"
                android:src="@drawable/ic_card_kikr" />

            <ImageView
                android:id="@+id/kikrPocketImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kikrRewordTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_icon"
                android:visibility="gone" />

            <TextView
                android:id="@+id/kikrInfoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kikrCardImageView"
                android:layout_marginBottom="@dimen/margin_large"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"

                android:gravity="center"
                android:text="@string/tutorial_kikr_lines"
                android:textSize="@dimen/x_large_text_size" />


            <ImageView
                android:id="@+id/kikrIconImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/learnMoreText"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:visibility="gone"
               android:layout_marginRight="15dp"
                android:src="@drawable/flatlay_icon_text" />

            <RelativeLayout
                android:id="@+id/parentRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" >
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <TextView
        android:id="@+id/learnMoreText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kikrInfoTextView"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:gravity="center|bottom"
        android:layout_marginBottom="5dp"
        android:text="@string/learn_more_text"
        android:textSize="@dimen/x_large_text_size"
        android:textStyle="bold" />
</RelativeLayout><!--
