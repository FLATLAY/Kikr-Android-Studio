<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/overlay"
            android:alpha="0.53"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/layout2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:id="@+id/layout5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/layout5.5"
                        android:layout_width="match_parent"
                        android:layout_marginTop="80dp"
                        android:layout_height="0dp"
                        android:layout_weight="70.6">

                        <ImageView
                            android:id="@+id/logoImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_weight="70.6"
                            android:layout_gravity="center_horizontal|top"
                            android:src="@drawable/round_beta_flatlay_ic" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout6"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="55">

                        <ImageView
                            android:id="@+id/logoImageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal|top"
                            android:src="@drawable/flatlay_text_white_transparent" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout7"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/layoutReferred"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/logoImageView"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <com.flatlay.ui.RoundImageView
                                android:id="@+id/user_profile_image"
                                android:layout_width="@dimen/interest_user_profile"
                                android:layout_height="@dimen/interest_user_profile"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/profile_icon" />

                            <TextView
                                android:id="@+id/user_profile_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/user_profile_image"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:lineSpacingExtra="2dp"
                                android:text="JohnSmith"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/user_profile_image"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:lineSpacingExtra="2dp"
                                android:text="has invited you\nto join"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large_text_size" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout20"
                        android:layout_marginTop="190dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/optionLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layoutReferred"
                            android:orientation="vertical"
                            android:layout_weight="285.03"
                           >

                            <Button
                                android:id="@+id/twitterButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="25dp"
                                android:layout_marginRight="25dp"
                                android:background="@drawable/loginborder"
                                android:text="Twitter"
                                android:textColor="@color/splashcolor"
                                android:textSize="25dp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/imgOrFBTwitter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/landing_margin_top"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_or"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginLeft="21.56dp"
                                android:layout_marginRight="21.56dp"
                                android:layout_weight="51.5"
                                android:orientation="horizontal"
                                >

                                <Button
                                    android:id="@+id/emailButton"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="6.5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/green_corner_button"
                                    android:text="SIGN UP"
                                    android:textColor="@color/white"
                                    android:clickable="true"
                                    android:fontFamily="Montserrat"
                                    android:textSize="17dp"
                                    />

                                <Button
                                    android:id="@+id/loginButton"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/emailButton"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="6.5dp"
                                    android:background="@drawable/green_corner_button"
                                    android:clickable="true"
                                    android:text="LOGIN"
                                    android:textColor="@color/white"
                                    android:fontFamily="Montserrat"
                                    android:textSize="17dp" />
                            </LinearLayout>

                            <Button
                                android:id="@+id/facebookButton"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="21.56dp"
                                android:layout_marginRight="21.56dp"
                                android:layout_weight="55.1"
                                android:background="@drawable/blue_corner_button"
                                android:clickable="true"
                                android:text="FACEBOOK"
                                android:fontFamily="Montserrat"
                                android:textColor="@color/white"
                                android:textSize="17dp"
                                />


                            <TextView
                                android:id="@+id/earn250"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="50dp"
                                android:layout_marginBottom="30dp"
                                android:layout_weight="20.96"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="How it works"
                                android:textColor="@color/white"
                                android:fontFamily="Montserrat"
                                android:textSize="17dp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</RelativeLayout>