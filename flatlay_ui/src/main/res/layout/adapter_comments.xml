<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layoutComment">

        <com.flatlay.ui.RoundImageView
            android:id="@+id/userImage"
            android:layout_width="@dimen/inspiration_user_image"
            android:layout_height="@dimen/inspiration_user_image"
            android:layout_margin="@dimen/padding_small"
            android:padding="@dimen/padding_small"
            android:src="@drawable/dum_user" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_image"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_large"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_small"
            android:paddingTop="@dimen/padding_large">


            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"

                android:text="User"
                android:textColor="#0e9b89"
                android:textStyle="bold"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/commentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
android:singleLine="false"
                android:text="0 Views"
                android:textColor="#212121"
                android:textSize="14dp" />

        </LinearLayout>
        <ImageView
            android:id="@+id/deleteComment"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:padding="12dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:src="@drawable/ic_delete" />
    </RelativeLayout>

</LinearLayout>