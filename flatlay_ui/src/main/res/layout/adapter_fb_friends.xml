<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/addBank_ListItem_padding" >

        <com.flatlay.ui.RoundImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/addBank_image_size"
            android:layout_height="@dimen/addBank_image_size"
            android:scaleType="center"
            android:src="@drawable/dum_add_bank_image" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/bank_image"
            android:text="CitiBank"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/xx_large_text_size" />

    </LinearLayout>

</LinearLayout>