<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="9dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/user_profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/follow_btn_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="0.5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="3dp"
                    android:visibility="visible">

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/imageInsp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/inspirationImagelayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/inspirationImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/dum_list_item_product"
                            app:riv_border_color="@color/black"
                            app:riv_border_width="1dp"
                            app:riv_corner_radius="7dp" />

                        <ImageView
                            android:id="@+id/largeheart"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/largeheart" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/noProductTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/brand_name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="3dp"
                        android:text="No products in collection"
                        android:textColor="@color/white"
                        android:textSize="@dimen/small_text_size"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/content_contain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <FrameLayout
                        android:id="@+id/content_container"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <HorizontalScrollView
                                android:id="@+id/productLayout"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:id="@+id/productInflaterLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"></LinearLayout>

                            </HorizontalScrollView>

                            <ProgressBar
                                android:id="@+id/progressBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </FrameLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/overlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="330dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/descriptionArrow2_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <ImageView
                            android:id="@+id/descriptionArrow2"
                            android:layout_width="27dp"
                            android:layout_height="30dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/descriptionarrow"
                            android:textColor="@color/white"
                            android:textSize="@dimen/large_text_size" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/profileLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/deletePost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="4dp"
                                android:color="@color/black"
                                android:drawablePadding="4dp"
                                android:src="@drawable/threedots"
                                android:visibility="gone"
                                app:civ_border_color="#000000"
                                app:civ_border_width="1dp" />


                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/userImage"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignTop="@+id/linearLayout2"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                app:civ_border_color="#6FE5CC"
                                app:civ_border_width="1dp" />

                            <LinearLayout
                                android:id="@+id/linearLayout2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_toRightOf="@+id/userImage"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="@dimen/padding_tiny">

                                <com.flatlay.utility.AutoTextSize
                                    android:id="@+id/userName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/padding_tiny"
                                    android:text="User Name"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/likesLayout"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true">

                            <RelativeLayout
                                android:layout_width="55dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true">

                                <TextView
                                    android:id="@+id/likeCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:text="0"
                                    android:textColor="@android:color/black"
                                    android:textSize="14dp"
                                    android:visibility="visible" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/staticLikes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/likes"
                                android:textColor="@android:color/black"
                                android:textSize="14dp"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/likeCountTextImage"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="8dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/heartoutline"
                                android:visibility="gone" />

                            <xyz.hanks.library.bang.SmallBangView
                                android:id="@+id/like_heart"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_alignParentRight="true">

                                <ImageView
                                    android:id="@+id/image"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/heart_selector" />
                            </xyz.hanks.library.bang.SmallBangView>

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/black" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/follow_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/follow_btn_height"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="6dp"
                                    android:background="@drawable/button_activity_gray"
                                    android:text="Follow"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/small_text_size"
                                    android:visibility="gone" />

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/likesAndShares"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp"
                            android:paddingRight="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4">

                                <LinearLayout
                                    android:id="@+id/onlyShares"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/fb_share"
                                            android:layout_width="0dp"
                                            android:layout_height="30dp"
                                            android:layout_marginTop="5dp"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:src="@drawable/facebooklogoo" />

                                        <ImageView
                                            android:id="@+id/tw_share"
                                            android:layout_width="0dp"
                                            android:layout_height="30dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="5dp"
                                            android:layout_toRightOf="@+id/fb_share"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:src="@drawable/twitterlogoo" />

                                        <com.twitter.sdk.android.core.identity.TwitterLoginButton
                                            android:id="@+id/tw_real_share"
                                            android:layout_width="27dp"
                                            android:layout_height="25dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="5dp"
                                            android:layout_toRightOf="@+id/fb_share"
                                            android:gravity="center"
                                            android:visibility="gone" />

                                        <ImageView
                                            android:id="@+id/pin_share"
                                            android:layout_width="0dp"
                                            android:layout_height="30dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="5dp"
                                            android:layout_toRightOf="@+id/userImage"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:src="@drawable/pinterestlogoo" />

                                        <ImageView
                                            android:id="@+id/gen_share"
                                            android:layout_width="0dp"
                                            android:layout_height="30dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="5dp"
                                            android:layout_toRightOf="@+id/pin_share"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:src="@drawable/shareicon" />

                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"></LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="35dp">

                            <TextView
                                android:id="@+id/commentcount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="0"
                                android:textColor="@android:color/black"
                                android:textSize="14dp"
                                android:visibility="visible" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/CommentCountlayout"
                            android:layout_width="45dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/CommentCountTextImage"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/speechbubble" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

