<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sharebackground"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_small"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginRight="@dimen/padding_small"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"></LinearLayout>

                <TextView
                    android:id="@+id/addToCollectionText"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Add to Collection"
                    android:textColor="@color/white"
                    android:textSize="@dimen/xx_large_text_size" />

                <LinearLayout
                    android:id="@+id/cancellayout"
                    android:layout_width="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:visibility="gone"
                        android:src="@drawable/cancelicon" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/add_collection_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_small"
        android:layout_marginTop="@dimen/padding_small"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/padding_large">

        <TextView
            android:id="@+id/createCollectionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_large"
            android:background="@drawable/sharebackgroundwhite"
            android:text="Create new Collection"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text_size" />

        <EditText
            android:id="@+id/createCollectionText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_large"
            android:background="@drawable/sharebackgroundwhite2"
            android:hint="New collection name"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text_size"
            android:visibility="gone"/>

    </LinearLayout>


    <ListView
        android:id="@+id/collection_listing"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:scrollbars="none"></ListView>

    <Button
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/green_corner_button"
        android:clickable="true"
        android:fontFamily="Montserrat"
        android:text="   DONE   "
        android:textColor="@color/white"
        android:textSize="18dp" />

</LinearLayout>