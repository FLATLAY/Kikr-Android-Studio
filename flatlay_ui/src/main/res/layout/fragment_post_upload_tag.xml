<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:TagsEditText="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dummylayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.3"></LinearLayout>

        <LinearLayout
            android:id="@+id/add_collection_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etCollectionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Post"
                android:textSize="15dp"
                android:visibility="gone"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/button1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/blackbordertextview"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Create\nCollection"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textOR"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="OR"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/button2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/blackbordertextview"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Existing\nCollection"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_collection_layout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_weight="4"
            android:background="@drawable/blackbordertextview"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/collectionnamelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blackbar"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/create_collection_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:hint="Name your collection"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/new_collection_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:hint=""
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/square_check_layout"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="70dp"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/square_check"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_margin="3dp"
                        android:src="@drawable/square_check" />

                    <ImageView
                        android:id="@+id/square_check2"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_margin="3dp"
                        android:src="@drawable/square_check"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/collection_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="Collection Name"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/cancel_layout1"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/cancelImage"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:src="@drawable/white_cancel_round" />

                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:id="@+id/cancel_layout2"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="25dp"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginRight="8dp"-->
                    <!--android:gravity="center">-->

                    <!--<TextView-->
                        <!--android:id="@+id/cancelIcon"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="25dp"-->
                        <!--android:text="CLOSE"-->
                        <!--android:textAlignment="center"-->
                        <!--android:textColor="@color/white"-->
                        <!--android:textSize="17dp" />-->
                <!--</LinearLayout>-->
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/add_products_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/blackbordertextview"
                        android:padding="3dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/remove_products_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/blackbordertextview"
                        android:padding="3dp"
                        android:text="Remove Products"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:visibility="gone" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="3dp">

                    <HorizontalScrollView
                        android:id="@+id/productLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/productInflaterLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></LinearLayout>
                    </HorizontalScrollView>

                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/picture_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="12"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp">

            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/inspirationImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:focusableInTouchMode ="true"
                android:focusable="true"
                android:src="@drawable/dum_list_item_product"
                app:riv_border_color="@color/black"
                app:riv_border_width="1dp"
                app:riv_corner_radius="7dp" />
            </FrameLayout>

            <EditText
                android:id="@+id/description_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/description_edittext"
                android:hint="Description"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/share_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/share_ins_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/instagram_small_green" />

                    <TextView
                        android:id="@+id/ins_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Instagram"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_alignParentRight="true"
                        android:id="@+id/switchInstagram"
                        android:layout_centerVertical="true"
                        android:theme="@style/UploadSwitch"
                        app:showText="false"/>

                    <!--<ImageView-->
                        <!--android:id="@+id/share_ins_toggle"-->
                        <!--android:layout_width="30dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:src="@drawable/toggle3" />-->
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/share_fb_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/facebook_small_green" />

                    <TextView
                        android:id="@+id/fb_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Facebook"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_alignParentRight="true"
                        android:id="@+id/switchfacebook"
                        android:layout_centerVertical="true"
                        android:theme="@style/UploadSwitch"
                        app:showText="false"/>

                    <!--<ImageView-->
                        <!--android:id="@+id/share_fb_toggle"-->
                        <!--android:layout_width="30dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:src="@drawable/toggle3" />-->
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/share_twi_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/twitter_small_green" />

                    <TextView
                        android:id="@+id/twitter_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Twitter"
                        android:textColor="@color/black"
                        android:textSize="16dp" />


                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_alignParentRight="true"
                        android:id="@+id/switchtwitter"
                        android:layout_marginRight="2dp"
                        android:layout_centerVertical="true"
                        android:theme="@style/UploadSwitch"
                        app:showText="false" />

                    <!--<ImageView-->
                        <!--android:id="@+id/share_twi_toggle"-->
                        <!--android:layout_width="30dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:src="@drawable/toggle3" />-->
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/share_pin_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/pinterst_small_green" />

                    <TextView
                        android:id="@+id/pinterest_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Pinterest"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <!--<ImageView-->
                        <!--android:id="@+id/share_pin_toggle"-->
                        <!--android:layout_width="30dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:src="@drawable/toggle3" />-->

                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_alignParentRight="true"
                        android:id="@+id/switchPinterest"
                        android:layout_marginRight="2dp"
                        android:layout_centerVertical="true"
                        android:theme="@style/UploadSwitch"
                        app:showText="false"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <com.flatlay.utility.MyMaterialContentOverflow3 xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/overflow2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/topdrawer"
        app:buttonDrawable="@drawable/back_icon"
        app:buttonPosition="left"
        app:contentColor="@color/white"
        app:fabButtonColor="@color/white">

        <FrameLayout
            android:id="@+id/frame_upload_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"></FrameLayout>

    </com.flatlay.utility.MyMaterialContentOverflow3>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/topdrawer3">

            <LinearLayout
                android:id="@+id/backIconLayout"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/backIcon"
                    android:layout_width="16dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/back_icon" />
            </LinearLayout>

            <EditText
                android:id="@+id/search_tab_text"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/topsearch_noborder"
                android:ems="10"
                android:gravity="center"
                android:hint="Search"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />


            <TextView
                android:id="@+id/add_collection_text"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="TAG ITEMS"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="18dp" />


            <LinearLayout
                android:id="@+id/linearLAyout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/post_without_tag_text"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="POST WITHOUT TAG"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/post_text"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:text="  POST  "
                    android:textAlignment="center"
                    android:background="@drawable/grey_corner_button"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>