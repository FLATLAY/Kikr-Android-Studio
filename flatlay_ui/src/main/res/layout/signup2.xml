<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#40000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40000000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="60dp"
            android:layout_weight="2"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal|top"
                    android:src="@drawable/round_beta_flatlay_ic" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout6"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/logoImageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal|top"
                    android:src="@drawable/flatlay_text_white_transparent" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout20"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="21.56dp"
            android:layout_marginRight="21.56dp"
            android:layout_marginTop="20dp"
            android:layout_weight="8"
            android:background="@drawable/black_corner_button"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/optionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/signUpText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="Montserrat"
                    android:text="SIGN UP"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <RelativeLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/signUpHeaderRelativeLayout"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/emailEditText"
                            style="@style/editTextSignup"
                            android:layout_height="wrap_content"
                            android:background="@drawable/flatlayloginboardernew2"
                            android:ems="10"
                            android:fontFamily="Montserrat"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:textSize="18dp"></EditText>

                        <EditText
                            android:id="@+id/reemailEditText"
                            style="@style/editTextSignup"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/flatlayloginboardernew2"
                            android:ems="10"
                            android:fontFamily="Montserrat"
                            android:hint="@string/retypeEmail"
                            android:inputType="textEmailAddress"
                            android:textSize="18dp" />

                        <EditText
                            android:id="@+id/passwordEditText"
                            style="@style/editTextSignup"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/flatlayloginboardernew2"
                            android:ems="10"
                            android:fontFamily="Montserrat"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:textSize="18dp"></EditText>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp">

                            <TextView
                                android:id="@+id/femaleTextView"
                                style="@style/editTextSignup"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/flatlayloginboardernew2"
                                android:fontFamily="Montserrat"
                                android:gravity="center"
                                android:text="Female"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/maleTextView"
                                style="@style/editTextSignup"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/flatlayloginboardernew2"
                                android:fontFamily="Montserrat"
                                android:gravity="center"
                                android:text="Male"
                                android:textSize="18dp" />
                        </LinearLayout>


                        <Button
                            android:id="@+id/nextButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/green_corner_button"
                            android:clickable="true"
                            android:fontFamily="Montserrat"
                            android:text="Next"
                            android:textColor="@color/gray"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:id="@+id/backToLanding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15dp"
                            android:fontFamily="Montserrat"
                            android:gravity="center"
                            android:text="Back"
                            android:textColor="@color/white"
                            android:textSize="18dp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>