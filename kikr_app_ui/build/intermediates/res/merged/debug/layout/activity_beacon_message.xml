<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/productRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/discover_product_height"
            android:layout_marginLeft="@dimen/discover_margin_side"
            android:layout_marginRight="@dimen/discover_margin_side"
            android:layout_marginTop="@dimen/discover_margin_top"
            android:orientation="vertical"
            android:padding="1dp" >

            <RelativeLayout
                android:id="@+id/discoverBottomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/discovr_buttom"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/discover_icon_side_margin"
                android:paddingRight="@dimen/discover_icon_side_margin"
                android:paddingTop="5dp"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/addImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_discover_btn_add" />

                <ImageView
                    android:id="@+id/addToCartTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_discover_btn_checkout" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/discoverFootImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_discover_foot"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:contentDescription="@null"
                android:src="@drawable/dum_list_item_product" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/discover_margin_side"
            android:layout_marginRight="@dimen/discover_margin_side"
            android:layout_marginTop="@dimen/discover_margin_top"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/productTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/large_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/discover_line_space"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/regular_price"
                    android:textSize="@dimen/large_text_size" />

                <TextView
                    android:id="@+id/productRegularPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$140"
                    android:textSize="@dimen/large_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/discover_line_space"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_price"
                    android:textSize="@dimen/large_text_size"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/productYourPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$120"
                    android:textSize="@dimen/large_text_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/discover_line_space"
                android:text=""
                android:textSize="@dimen/large_text_size" />

            <Button
                android:id="@+id/checkoutButton"
                style="@style/buttonSignup"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Buy"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>