<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/addBank_image_size"
            android:layout_height="@dimen/addBank_image_size"
            android:scaleType="fitXY"
            android:src="@drawable/dum_user" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/app_background" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:text="CitiBank"
            android:layout_weight="1"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/xx_large_text_size" />

        <ImageView
            android:id="@+id/checkImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_add_collection" 
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/app_background" />

</LinearLayout>