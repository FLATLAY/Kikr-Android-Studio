<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_green" >

    <EditText
        android:id="@+id/passwordEditText"
        style="@style/editTextSignup"
        android:layout_marginLeft="@dimen/phone_margin_side"
        android:layout_marginRight="@dimen/phone_margin_side"
        android:layout_marginTop="@dimen/phone_margin_top"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPassword|number"
        android:maxLength="4"
        android:password="true"
        android:hint="@string/change_password_currentpass_text" />

</LinearLayout>