<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/loadingBar"
        android:background="@color/white">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/productRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="1dp">

                <RelativeLayout
                    android:id="@+id/imageLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/discover_margin_top"
                    android:background="@color/white"
                    android:minHeight="150dp"
                    android:orientation="vertical">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/productImageView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/product_height"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="@dimen/margin_xlarge"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/loadingBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="invisible">

                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txtMessageBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="Loading images..." />
                    </LinearLayout>

                </RelativeLayout>


                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageLayout"
                    android:padding="4dp"
                    android:visibility="gone" />


                <com.kikr.ui.RoundImageView
                    android:id="@+id/user_profile_image"
                    android:layout_width="@dimen/brand_image_size"
                    android:layout_height="@dimen/brand_image_size"
                    android:layout_margin="@dimen/margin_large"
                    android:scaleType="center"
                    android:src="@drawable/dum_user"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/brandNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/brandImage"
                    android:background="@drawable/shadow_gray"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:paddingBottom="@dimen/padding_small"
                    android:paddingLeft="@dimen/padding_large"
                    android:singleLine="true"
                    android:text="Brand Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/large_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/indicator"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/discoverBottomLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="4">


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="4dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/round_ract_wide"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_singleproductspage_menu"
                            android:textColor="@color/app_text_color"
                            android:textSize="@dimen/large_text_size" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/discover_margin_side"
                        android:layout_marginRight="@dimen/discover_margin_side"
                        android:layout_marginTop="@dimen/discover_margin_top"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/productTitleTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Red Tape"
                            android:textSize="@dimen/large_text_size"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:id="@+id/colorLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/discover_line_space"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/color_text"
                                android:textSize="@dimen/large_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/colorTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/padding_small"
                                android:drawableRight="@drawable/ic_down_gray_arrow"
                                android:padding="@dimen/padding_tiny"
                                android:text=" Black"
                                android:textSize="@dimen/large_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sizeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/discover_line_space"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/size_text"
                                android:textSize="@dimen/large_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/sizeTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/padding_small"
                                android:drawableRight="@drawable/ic_down_gray_arrow"
                                android:padding="@dimen/padding_tiny"
                                android:text=" 5.5"
                                android:textSize="@dimen/large_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/optionLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/discover_line_space"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/option_text"
                                android:textSize="@dimen/large_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/optionTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/padding_small"
                                android:drawableRight="@drawable/ic_down_gray_arrow"
                                android:padding="@dimen/padding_tiny"
                                android:text=" Black"
                                android:textSize="@dimen/large_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fitLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/discover_line_space"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fit_text"
                                android:textSize="@dimen/large_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/fitTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/padding_small"
                                android:drawableRight="@drawable/ic_down_gray_arrow"
                                android:padding="@dimen/padding_tiny"
                                android:text=" Black"
                                android:textSize="@dimen/large_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/quantityLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/discover_line_space"
                            android:gravity="center"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/quantity_text"
                                android:textSize="@dimen/large_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/quantityTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/padding_small"
                                android:drawableRight="@drawable/ic_down_gray_arrow"
                                android:padding="@dimen/padding_tiny"
                                android:text=" 1"
                                android:textSize="@dimen/large_text_size" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/descriptionTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/discover_line_space"
                            android:text="Protective shoe with aggressive traction for sloppy terrain or semi-technical to very rugged trails... read more"
                            android:textSize="@dimen/large_text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/discoverBottomLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/likeCountText"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_above="@+id/indicator"
                            android:layout_margin="10dp"
                            android:background="@drawable/round_ract_wide"
                            android:drawableRight="@drawable/ic_flame_logo"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="0"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/small_text_size" />

                        <ImageView
                            android:id="@+id/addToCartText"
                            android:layout_width="50dp"
                            android:visibility="gone"
                            android:layout_height="50dp"
                            android:layout_margin="4dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/round_ract_wide"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_discover_btn_checkout"
                            android:textColor="@color/app_text_color"
                            android:textSize="@dimen/large_text_size" />

                        <TextView
                            android:id="@+id/addToCollectionText"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_margin="4dp"
                            android:background="@drawable/round_ract"
                            android:gravity="center"
                            android:src="@drawable/ic_discover_btn_checkout"
                            android:text="Add To Collection"
                            android:textColor="@color/app_text_color"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/viewDetailsWebView"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="4dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/round_ract_wide"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_singleproductspage_menu"
                            android:textColor="@color/app_text_color"
                            android:textSize="@dimen/large_text_size" />
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/discoverBottomLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white">


                    <ImageView
                        android:id="@+id/addImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:padding="@dimen/padding_tiny"
                        android:src="@drawable/ic_discover_btn_add"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/addToCartTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:drawableRight="@drawable/ic_discover_btn_checkout"
                        android:gravity="center_vertical"
                        android:padding="@dimen/padding_tiny"
                        android:text="Add to "
                        android:textColor="@color/gray"
                        android:textSize="@dimen/large_text_size"
                        android:visibility="gone" />

                    <ProgressBar
                        android:id="@+id/progressBarCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/gray2"
        android:padding="@dimen/padding_large">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingLeft="@dimen/padding_large">

            <TextView
                android:id="@+id/productRegularPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$140"
                android:textColor="@color/black"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productYourPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/large_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/checkoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@color/btn_green"
            android:padding="@dimen/padding_large"
            android:text="Add To Cart"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>