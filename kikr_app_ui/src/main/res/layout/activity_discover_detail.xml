<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/loadingBar"
        android:background="@color/white" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/productRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="1dp" >

                <RelativeLayout
                    android:id="@+id/imageLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/discover_margin_top"
                    android:background="@color/white"
                    android:minHeight="150dp"
                    android:orientation="vertical" >

                    <android.support.v4.view.ViewPager
                        android:id="@+id/productImageView"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="@dimen/margin_xlarge"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/product_height"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:visibility="visible" />

                    <android.support.v4.view.ViewPager
                        android:id="@+id/zoom_viewpagerimagepager"
                        android:layout_margin="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/product_height"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone" />
                    
                    
  
                    <LinearLayout
					    android:id="@+id/loadingBar"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:layout_alignParentBottom="true"
					    android:orientation="horizontal"
					    android:gravity="center" 
					    android:visibility="invisible" >
					
					    <ProgressBar
					        android:id="@+id/progressBar"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content" />
					
					    <TextView
					        android:id="@+id/txtMessageBar"
					        android:layout_height="wrap_content"
					        android:layout_width="wrap_content"
					        android:text="Loading images..."
					        android:layout_margin="8dp" />
					</LinearLayout>
					
                </RelativeLayout>
                
                
                <com.viewpagerindicator.CirclePageIndicator
                        android:id="@+id/indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageLayout"
                        android:padding="4dp"/>
                

                <com.kikr.ui.RoundImageView
                    android:id="@+id/user_profile_image"
                    android:layout_width="@dimen/brand_image_size"
                    android:layout_height="@dimen/brand_image_size"
                    android:layout_margin="@dimen/margin_large"
                    android:scaleType="center"
                    android:src="@drawable/dum_user"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/brandNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/brandImage"
                    android:background="@drawable/shadow_gray"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:paddingBottom="@dimen/padding_small"
                    android:paddingLeft="@dimen/padding_large"
                    android:singleLine="true"
                    android:text="Brand Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/large_text_size" />
				<!-- 
				<View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/half_devider"
                    android:layout_above="@+id/discoverBottomLayout"
                    android:background="@color/app_text_color" />
				 -->
                

                <RelativeLayout
                    android:id="@+id/discoverBottomLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/indicator"
                    android:background="@color/white" >

                    <LinearLayout
                        android:id="@+id/discoverBottomLayout"
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
	                    android:gravity="center"
	                    android:weightSum="4">
                        
                        <ImageView
	                        android:id="@+id/addToCartText"
	                        android:layout_width="70dp"
	                        android:layout_height="70dp"
	                        android:layout_margin="4dp"
                            android:elevation="@dimen/padding_large"
	                        android:background="@drawable/round_ract_wide"
	                        android:src="@drawable/ic_discover_btn_checkout"
	                        android:adjustViewBounds="true"
	                        android:scaleType="centerInside"
	                        android:textColor="@color/app_text_color"
	                        android:textSize="@dimen/large_text_size" />
	                    
	                    <TextView
	                        android:id="@+id/addToCollectionText"
	                        android:layout_width="70dp"
	                        android:layout_height="70dp"
	                        android:layout_margin="4dp"
                            android:elevation="@dimen/padding_large"
	                        android:background="@drawable/round_ract_wide"
	                        android:text="+"
	                        android:gravity="center"
	                        android:src="@drawable/ic_discover_btn_checkout"
	                        android:textColor="@color/btn_green"
	                        android:textStyle="bold"
	                        android:textSize="30dp" />
	
	                    <TextView
			                android:id="@+id/viewDetailsWebView"
			                android:layout_width="70dp"
	                        android:layout_height="70dp"
			                android:layout_margin="4dp"
                            android:elevation="@dimen/padding_large"
			                android:background="@drawable/round_ract_wide"
			                android:maxLines="2"
			                android:text="View on\nStore Site"
			                android:textStyle="bold"
			                android:gravity="center"
			                android:textColor="@color/btn_green"
			                android:textSize="@dimen/very_small_text_size" />
	                    
	                    <ImageView
	                        android:id="@+id/shareImage"
	                        android:layout_width="70dp"
	                        android:layout_height="70dp"
	                        android:layout_margin="4dp"
                            android:elevation="@dimen/padding_large"
	                        android:adjustViewBounds="true"
	                        android:scaleType="centerInside"
	                        android:background="@drawable/round_ract_wide"
	                        android:src="@drawable/ic_share_gray"
	                        android:textColor="@color/app_text_color"
	                        android:textSize="@dimen/large_text_size" />
                        </LinearLayout>
                    
                    

                    <ImageView
                        android:id="@+id/addImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:padding="@dimen/padding_tiny"
                        android:src="@drawable/ic_discover_btn_add"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/addToCartTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        android:drawableRight="@drawable/ic_discover_btn_checkout"
                        android:gravity="center_vertical"
                        android:padding="@dimen/padding_tiny"
                        android:text="Add to "
                        android:textColor="@color/gray"
                        android:textSize="@dimen/large_text_size"
                        android:visibility="gone" />

                    <ProgressBar
                        android:id="@+id/progressBarCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone" />
                </RelativeLayout>

                <!-- 
                
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/half_devider"
                    android:layout_below="@+id/discoverBottomLayout"
                    android:background="@color/app_text_color" />
                 -->

                <ImageView
                    android:id="@+id/discoverFootImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_discover_foot"
                    android:visibility="gone" />

                <com.kikr.ui.RoundImageView
                    android:id="@+id/brandImage"
                    android:layout_width="@dimen/detail_brand_image"
                    android:layout_height="@dimen/detail_brand_image"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:layout_marginTop="@dimen/margin_large"
                    android:src="@drawable/dum_list_item_product"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/likeCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/indicator"
                    android:layout_alignRight="@+id/discoverBottomLayout"
                    android:layout_margin="10dp"
                    android:drawableRight="@drawable/ic_flame_logo"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="0"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/small_text_size" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/discover_margin_side"
                android:layout_marginRight="@dimen/discover_margin_side"
                android:layout_marginTop="@dimen/discover_margin_top"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/productTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Red Tape"
                    android:textSize="@dimen/large_text_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/discover_line_space" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/regular_price"
                        android:textSize="@dimen/large_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productRegularPriceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$140"
                        android:textSize="@dimen/large_text_size" />

                    <TextView
                        android:id="@+id/saleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:text="@string/your_price"
                        android:textSize="@dimen/large_text_size"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/productYourPriceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:text=""
                        android:textSize="@dimen/large_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/colorLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/discover_line_space"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/color_text"
                        android:textSize="@dimen/large_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/colorTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/padding_small"
                        android:drawableRight="@drawable/ic_down_gray_arrow"
                        android:padding="@dimen/padding_tiny"
                        android:text=" Black"
                        android:textSize="@dimen/large_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sizeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/discover_line_space"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/size_text"
                        android:textSize="@dimen/large_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sizeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/padding_small"
                        android:drawableRight="@drawable/ic_down_gray_arrow"
                        android:padding="@dimen/padding_tiny"
                        android:text=" 5.5"
                        android:textSize="@dimen/large_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/optionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/discover_line_space"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/option_text"
                        android:textSize="@dimen/large_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/optionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/padding_small"
                        android:drawableRight="@drawable/ic_down_gray_arrow"
                        android:padding="@dimen/padding_tiny"
                        android:text=" Black"
                        android:textSize="@dimen/large_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fitLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/discover_line_space"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fit_text"
                        android:textSize="@dimen/large_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/fitTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/padding_small"
                        android:drawableRight="@drawable/ic_down_gray_arrow"
                        android:padding="@dimen/padding_tiny"
                        android:text=" Black"
                        android:textSize="@dimen/large_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/quantityLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/discover_line_space" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quantity_text"
                        android:textSize="@dimen/large_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/quantityTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/padding_small"
                        android:drawableRight="@drawable/ic_down_gray_arrow"
                        android:padding="@dimen/padding_tiny"
                        android:text=" 1"
                        android:textSize="@dimen/large_text_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/descriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/discover_line_space"
                    android:text="Protective shoe with aggressive traction for sloppy terrain or semi-technical to very rugged trails... read more"
                    android:textSize="@dimen/large_text_size" />

                <Button
                    android:id="@+id/checkoutButton"
                    style="@style/buttonSignup"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Checkout" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>