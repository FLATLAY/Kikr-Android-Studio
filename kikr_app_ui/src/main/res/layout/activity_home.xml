<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tabLayout"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"></FrameLayout>

        <include
            android:id="@+id/footer"
            layout="@layout/footer"
            android:visibility="gone" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height_new"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/cart_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/tab_selected_new"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_cart"
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:src="@drawable/cards" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/search_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/tab_bg_new"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_search"
                android:layout_width="35dp"
                android:layout_height="35dp"


                android:src="@drawable/search_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/upload_post_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/tab_bg_new"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_upload_post"
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:src="@drawable/camera_icon" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/profile_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/tab_bg_new"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"


                android:src="@drawable/user" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/message_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/tab_bg_new"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_message"
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:src="@drawable/message" />
        </LinearLayout>


    </LinearLayout>

    <com.kikr.menu.ContextMenuView
        android:id="@+id/contextMenuBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55000000"
        android:visibility="gone"></com.kikr.menu.ContextMenuView>

</RelativeLayout>