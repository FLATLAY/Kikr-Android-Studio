<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

    android:background="@color/btn_green">
	<RelativeLayout
		android:orientation="vertical"
		android:paddingLeft="@dimen/margin_credit"
		android:paddingRight="@dimen/margin_credit"
		android:paddingBottom="10dp"

		android:layout_width="match_parent"
		android:layout_height="match_parent">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/icon"
		android:orientation="vertical"

		>
		<ImageView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/logo"
			android:layout_centerHorizontal="true"
			android:src="@drawable/flatlay_text_white_transparent" />
		<TextView
			android:id="@+id/textView1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:textColor="@color/white"
			android:text=" Credits"
			android:layout_below="@+id/logo"
			android:layout_marginTop="-7dp"
			android:textSize="@dimen/xx_large_text_size"
			android:textStyle="bold" />
	</RelativeLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:layout_below="@+id/icon"
			android:layout_height="wrap_content">
			<TextView
				android:id="@+id/textView2"
				android:layout_marginTop="@dimen/margin_xlarge"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_gravity="center_horizontal"
				android:textColor="@color/credittextcolor"
				android:lineSpacingExtra="3dp"
				android:text="@string/kikr_tutorial_text_line_one"
				android:textSize="@dimen/x_large_text_size" />

			<TextView
				android:id="@+id/textView3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/margin_large"
				android:textColor="@color/credittextcolor"
				android:gravity="center"
				android:lineSpacingExtra="3dp"
				android:text="@string/kikr_tutorial_text_line_two"
				android:textSize="@dimen/x_large_text_size" />

			<TextView
				android:id="@+id/textView4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/margin_xlarge"
				android:gravity="center"
				android:lineSpacingExtra="3dp"
				android:textColor="@color/credittextcolor"
				android:text="@string/kikr_tutorial_text_line_three"
				android:textSize="@dimen/x_large_text_size" />

			<TextView
				android:id="@+id/textView4"
				android:textColor="@color/white"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/margin_xlarge"
				android:layout_gravity="center_horizontal"
				android:gravity="center"
				android:lineSpacingExtra="3dp"
				android:text="The Flatlay Purchase Guarantee"
				android:textStyle="bold"
				android:textSize="@dimen/x_large_text_size" />

			<LinearLayout
				android:id="@+id/learnmorelayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/margin_xlarge"
				android:layout_gravity="center_horizontal"
				android:orientation="vertical">

				<!--<ImageView-->
				<!--android:layout_width="wrap_content"-->
				<!--android:layout_height="wrap_content"-->
				<!--android:gravity="center"-->
				<!--android:src="@drawable/kikrhighlight" />-->

				<TextView
					android:id="@+id/learnMoretext"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:layout_gravity="center_horizontal"
					android:lineSpacingExtra="3dp"
					android:text="Learn More"

					android:textColor="@color/white"
					android:textSize="@dimen/x_large_text_size" />

			</LinearLayout>

			<TextView
				android:id="@+id/textView6"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="8dp"
				android:padding="@dimen/padding_large"
				android:text="@string/kikr_tutorial_text_line_four"
				android:textColor="@color/credittextcolor"
				android:textSize="@dimen/medium_text_size" />

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Back"
				android:layout_marginTop="7dp"
				android:paddingLeft="4dp"
				android:paddingRight="4dp"
				android:background="@drawable/rectangle_shape_white"
				android:id="@+id/back"
				android:gravity="center"
				android:textSize="@dimen/x_large_text_size"
				android:textColor="@color/white"
				android:layout_gravity="center_horizontal"/>
		</LinearLayout>


	</RelativeLayout>
    </ScrollView>