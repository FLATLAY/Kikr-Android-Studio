<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_phone_number"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/phoneNumberEditText"
        style="@style/editTextSignup"
        android:layout_marginLeft="@dimen/phone_margin_side"
        android:layout_marginRight="@dimen/phone_margin_side"
        android:layout_marginTop="@dimen/phone_margin_top"
        android:hint="@string/enter_phone_number"
        android:gravity="center"
        android:inputType="phone"
        android:ems="10" >
    </EditText>

</LinearLayout>