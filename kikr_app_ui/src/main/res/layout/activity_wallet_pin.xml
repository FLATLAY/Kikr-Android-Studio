<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#595959"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/wallet_pin_margin_side"
        android:layout_marginRight="@dimen/wallet_pin_margin_side"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pin_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="@string/create_pin"
            android:textColor="@color/white"
            android:textSize="@dimen/xx_large_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <TextView
                android:id="@+id/firstDigit"
                style="@style/pinTextView"
                android:textColor="@color/btn_green"
                android:text="-" >
            </TextView>

            <TextView
                android:id="@+id/secondDigit"
                style="@style/pinTextView"
                android:textColor="@color/btn_green"
                android:text="-" >
            </TextView>

            <TextView
                android:id="@+id/thirdDigit"
                style="@style/pinTextView"
                android:textColor="@color/btn_green"
                android:text="-" >
            </TextView>

            <TextView
                android:id="@+id/fourthDigit"
                style="@style/pinTextView"
                android:textColor="@color/btn_green"
                android:text="-" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wallet_pin_line_space" >

            <TextView
                style="@style/pinTextView"
                android:onClick="click"
                android:tag="1"
                android:text="1" >
            </TextView>

            <TextView
                style="@style/pinTextView"
                android:onClick="click"
                android:tag="2"
                android:text="2" >
            </TextView>

            <TextView
                style="@style/pinTextView"
                android:onClick="click"
                android:tag="3"
                android:text="3" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wallet_pin_line_space" >

            <TextView
                style="@style/pinTextView"
                android:onClick="click"
                android:tag="4"
                android:text="4" >
            </TextView>

            <TextView
                style="@style/pinTextView"
                android:onClick="click"
                android:tag="5"
                android:text="5" >
            </TextView>

            <TextView
                style="@style/pinTextView"
                android:onClick="click"
                android:tag="6"
                android:text="6" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wallet_pin_line_space" >

            <TextView
                style="@style/pinTextView"
                android:onClick="click"
                android:tag="7"
                android:text="7" >
            </TextView>

            <TextView
                style="@style/pinTextView"
                android:onClick="click"
                android:tag="8"
                android:text="8" >
            </TextView>

            <TextView
                style="@style/pinTextView"
                android:onClick="click"
                android:tag="9"
                android:text="9" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wallet_pin_line_space" >

            <ImageView
                android:id="@+id/backArrowImageView"
                style="@style/pinTextView"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/padding_large"
                android:src="@drawable/ic_pin_backarrow"
                android:text="" />

            <TextView
                style="@style/pinTextView"
                android:onClick="click"
                android:tag="0"
                android:text="0" >
            </TextView>

            <TextView
                style="@style/pinTextView"
                android:text="" >
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/forgotWalletPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_large"
            android:text="Forgot Pin? Send Pin to Email"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/large_text_size"
            android:visibility="visible" />
    </LinearLayout>

</ScrollView>