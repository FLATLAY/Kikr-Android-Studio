<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/user_profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/menu_devider_height">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/userImage"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/padding_tiny"
                android:id="@+id/linearLayout2">

                <com.flatlay.utility.AutoTextSize
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="@dimen/padding_tiny"
                    android:text="User Name"

                    android:textColor="@color/btn_green"
                    android:textSize="22dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/collection_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="@dimen/padding_tiny"
                        android:text="0 Collections"
                        android:textColor="#6c6c6c"
                        android:textSize="7pt" />

                    <TextView
                        android:id="@+id/follower_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"
                        android:gravity="center"

                        android:padding="@dimen/padding_tiny"
                        android:text="0 Followers"
                        android:textColor="#6c6c6c"
                        android:textSize="7pt" />
                </LinearLayout>

            </LinearLayout>

            <com.flatlay.ui.RoundImageView
                android:id="@+id/userImage"
                android:layout_width="@dimen/inspiration_user_image"
                android:layout_height="@dimen/inspiration_user_image"
                android:padding="@dimen/padding_small"
                android:src="@drawable/dum_user"
                android:layout_alignBottom="@+id/linearLayout2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/follow_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginRight="1dp"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:layout_marginTop="0.5dp"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/deletePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:padding="12dp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:src="@drawable/instagramthreeicon" />
            <TextView
                android:id="@+id/follow_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/fallowbuttonbg"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"

                android:paddingLeft="7dp"
                android:paddingRight="6dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:drawablePadding="0dp"
                android:text="FOLLOW"
                android:textColor="@color/app_text_color"
                android:textSize="13dp"
                android:textStyle="bold"
                android:visibility="visible"/>


        </LinearLayout>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginBottom="2dp"
        android:background="@color/btn_gray"></View>

    <RelativeLayout
        android:id="@+id/expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#ebebeb"
        android:padding="5dp">


        <ImageView
            android:id="@+id/descriptionArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aboveShadow"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:padding="@dimen/padding_small"
            android:scaleType="centerInside"
            android:src="@drawable/ic_down_gray_arrow"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/large_text_size" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_margin_side"
            android:layout_marginRight="@dimen/discover_margin_side"

            android:layout_toRightOf="@+id/descriptionArrow">

            <TextView
                android:id="@+id/productTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Collection Name"
                android:textColor="#6c6c6c"

                android:textSize="12dp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalItemsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="35 More Items"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/medium_text_size"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/imgLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#e1dede"
                android:orientation="horizontal"
                android:paddingBottom="1.5dp"
                android:paddingRight="2dp"
                android:paddingTop="1.5dp">

                <ImageView
                    android:id="@+id/inspirationImage1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:adjustViewBounds="true"
                    android:src="@drawable/dum_list_item_product" />

                <ImageView
                    android:id="@+id/inspirationImage2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="3dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/dum_list_item_product" />

                <ImageView
                    android:id="@+id/inspirationImage3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="3dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/dum_list_item_product" />


                <ImageView
                    android:id="@+id/inspirationImage4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="3dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/dum_list_item_product" />


                <ImageView
                    android:id="@+id/inspirationImage5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="3dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/dum_list_item_product" />


            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1"
        android:background="#e7e6e6"
        android:paddingRight="5dp"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:id="@+id/productLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="1dp"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:id="@+id/productInflaterLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></LinearLayout>
            </HorizontalScrollView>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone" />
        </RelativeLayout>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/inspirationImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:src="@drawable/dum_list_item_product" />

            <Button
                android:id="@+id/follow_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/follow_btn_height"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/padding_large"
                android:background="@drawable/button_activity_gray"
                android:text="Follow"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/noProductTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/brand_name"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:text="No products in collection"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"

        android:orientation="vertical">

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="14dp"
            android:text="Description"
            android:textColor="#212121"
            android:textSize="8pt" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/likeCountTextImage"
                        android:layout_width="32dp"
                        android:layout_height="32dp"

                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="1dp"
                        android:paddingRight="1dp"
                        android:src="@drawable/ic_heart_outline_grey" />


                    <TextView
                        android:id="@+id/likeCount"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="3dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="0dp"
                        android:text="0"
                        android:textColor="#6c6c6c"
                        android:textSize="8pt"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/CommentCountTextImage"
                        android:layout_width="32dp"
                        android:layout_height="36dp"
                      android:padding="1dp"
                        android:layout_marginTop="0dp"
                        android:gravity="center"

                        android:src="@drawable/chat_icon" />


                    <TextView
                        android:id="@+id/commentCount"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="3dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="0dp"
                        android:text="0"
                        android:textColor="#6c6c6c"
                        android:textSize="8pt"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/deletePost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="4dp"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/instagramthreeicon" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sharetofriend"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:paddingRight="5dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="3dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"

                    android:src="@drawable/share" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/inspirationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="11dp"
                android:drawablePadding="1dp"
                android:text="1 min"

               android:layout_centerVertical="true"
                android:textColor="#6c6c6c"
                android:paddingRight="5dp"
                android:textSize="6pt" />
        </RelativeLayout>




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="1dp"
        android:background="@color/btn_gray"></View>
</LinearLayout>