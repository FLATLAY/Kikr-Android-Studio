<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/headerCollectionList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" >

            <TextView
                android:id="@+id/collection_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Collection Name"
                android:textColor="@color/app_text_color" />

            <ImageView
                android:id="@+id/clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/collection_created_at"
                android:src="@drawable/ic_clockicon" />

            <TextView
                android:id="@+id/collection_created_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/detail_collection_img"
                android:text="Dec 20th"
                android:textColor="@color/app_text_color" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/app_text_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_background"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/collection_views"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="5dp"
                android:paddingBottom="@dimen/padding_large"
                android:paddingLeft="@dimen/padding_small"
                android:paddingTop="@dimen/padding_large"
                android:text="Pages Views: 20,000 \n Item Saves: 10,000"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/small_text_size" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:background="@color/app_text_color" />

            <TextView
                android:id="@+id/collection_payout_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="5dp"
                android:paddingBottom="@dimen/padding_large"
                android:paddingLeft="@dimen/padding_small"
                android:paddingTop="@dimen/padding_large"
                android:text="Collection Payout \n $15.45"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/app_text_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/collection_image_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dum_xx_img1" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/app_text_color" />

                <ImageView
                    android:id="@+id/collection_image_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dum_xx_img2" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/app_text_color" />

                <ImageView
                    android:id="@+id/collection_image_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dum_xx_img3" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/app_text_color" />

                <ImageView
                    android:id="@+id/collection_image_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dum_xx_img4" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/view_bottom"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/app_text_color" />
    </LinearLayout>

</LinearLayout>