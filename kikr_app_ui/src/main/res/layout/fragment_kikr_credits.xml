<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/discover_margin_side"
            android:layout_marginRight="@dimen/discover_margin_side"
            android:layout_marginTop="@dimen/discover_margin_top"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:padding="@dimen/padding_small" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/credits_available_credits"
                    android:textSize="@dimen/large_text_size" />

                <TextView
                    android:id="@+id/creditsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textSize="@dimen/large_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/credits_edit_text_height"
                android:layout_marginBottom="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_large"
                android:visibility="visible" >

                <TextView
                    android:layout_width="@dimen/credits_heading_width"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_small"
                    android:text="@string/credits_amount"
                    android:textSize="@dimen/large_text_size" />

                <EditText
                    android:id="@+id/amountEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/simple_ract"
                    android:hint="$1.00"
                    android:inputType="number"
                    android:padding="@dimen/padding_small"
                    android:textSize="@dimen/large_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/credits_edit_text_height"
                android:layout_marginBottom="@dimen/margin_large"
                android:visibility="visible" >

                <TextView
                    android:layout_width="@dimen/credits_heading_width"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_small"
                    android:text="@string/credits_user"
                    android:textSize="@dimen/large_text_size" />

                <TextView
                    android:id="@+id/userSelectBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@drawable/simple_ract"
                    android:drawableRight="@drawable/ic_green_down_arrow"
                    android:padding="@dimen/padding_small"
                    android:textSize="@dimen/large_text_size" />
            </LinearLayout>

            <Button
                android:id="@+id/submitBtn"
                style="@style/buttonSignup"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/credits_confirm" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>