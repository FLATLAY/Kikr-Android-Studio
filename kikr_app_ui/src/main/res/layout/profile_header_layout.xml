<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/profile_img_bg_height">

    <ImageView
        android:id="@+id/bgProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_bg" />

    <LinearLayout
        android:id="@+id/centerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:gravity="center"
        android:orientation="vertical">

        <com.kikr.ui.RoundImageView
            android:id="@+id/user_profile_image"
            android:layout_width="@dimen/addBank_image_size"
            android:layout_height="@dimen/addBank_image_size"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/dum_user" />

        <TextView
            android:id="@+id/user_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profile_image"
            android:layout_centerHorizontal="true"
            android:text="User Name"
            android:textColor="@color/white" />
    </LinearLayout>

    <ImageView
        android:id="@+id/editProfileImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:src="@drawable/ic_edit"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/centerLayout"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_large"
            android:background="@drawable/button_activity"
            android:padding="5dp"
            android:text="Photos"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size"
            android:visibility="visible" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:text=""
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btn_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            android:background="@drawable/button_activity"
            android:padding="5dp"
            android:text="Activity"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size"
            android:visibility="visible" />


    </LinearLayout>


</RelativeLayout>

